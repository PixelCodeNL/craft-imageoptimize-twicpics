{
    "name": "pixelcode/craft-imageoptimize-twicpics",
    "description": "This is an Image Transform for the ImageOptimize Craft CMS plugin that implements the TwicPics service.",
    "version": "1.1.2",
    "type": "craft-plugin",
    "license": "proprietary",
    "support": {
        "email": "dev@pixelcode.nl"
    },
    "require": {
        "php": ">=8.1",
        "craftcms/cms": "^4.3.5|^5"
    },
    "require-dev": {
        "craftcms/ecs": "^1.0",
        "craftcms/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "pixelcode\\imageoptimizetwicpics\\": "src/"
        }
    },
    "extra": {
        "handle": "imageoptimize-twicpics",
        "name": "ImageOptimizeTwicPics",
        "developer": "Pixel&Code",
        "documentationUrl": "",
        "class": "pixelcode\\imageoptimizetwicpics\\ImageOptimizeTwicPics"
    },
    "scripts": {
        "check-cs": "ecs check --ansi",
        "fix-cs": "ecs check --ansi --fix",
        "phpstan": "phpstan --memory-limit=1G"
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.1"
        },
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "craftcms/plugin-installer": true
        }
    }
}

